                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/imvThumuc"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@color/gach" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltlDownload"
