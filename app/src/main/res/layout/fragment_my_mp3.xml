                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/avataxx" />

                <TextView
                    android:id="@+id/tvmy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_toEndOf="@+id/imvAvartar"
                    android:text="@string/my_music"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTongbaihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tvmy"
                    android:layout_below="@+id/tvmy"
                    android:text="52"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvmy"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_toEndOf="@+id/tvTongbaihat"
                    android:text="@string/baihat"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16sdp" />
            </RelativeLayout>

