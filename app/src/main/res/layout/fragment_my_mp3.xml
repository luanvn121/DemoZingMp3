                        android:background="@color/colorMy" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltlBaihat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <ImageView
